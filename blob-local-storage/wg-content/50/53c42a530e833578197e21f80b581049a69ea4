<script>
	function toggleActive(item){
		if(item.isActive()){
			item.isActive(false);
		}
		else{
			item.isActive(true);
		}
	}
	function toggleByVar(item){
		if(item.byVariable()){
			item.byVariable(false);
		}
		else{
			item.byVariable(true);
		}
	}
	function toggleDemo(item){
		if(item.isDemo()){
			item.isDemo(false);
		}
		else{
			item.isDemo(true);
		}
	}
	ko.applyBindings(vm);
</script>